package com.jshop.apitests;

import org.testng.annotations.BeforeClass;
import io.restassured.RestAssured;

public class AppTest {
    
	 protected String basePath = System.getProperty("base.path", "/");
	    @BeforeClass
	    public void setup() {
	        String baseUri = System.getProperty("base.uri", "http://localhost");
	        String port = System.getProperty("base.port", "8080");
	        RestAssured.baseURI = baseUri;
	        
	        //parsing in to int since the port is coming in string value from above
	        RestAssured.port = Integer.parseInt(port);
	        RestAssured.basePath = basePath;
	    }
}
